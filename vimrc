" +-----------------------------------------------------+
" |                     NEOVIM-SETTERS                  |
" +-----------------------------------------------------+

set encoding = "UTF-8"
set smarttab
set splitbelow
set splitright
set showtabline = 0
set tabstop = 4
set softtabstop = 4
set shiftwidth = 4
set expandtab
set autoindent
set smartindent