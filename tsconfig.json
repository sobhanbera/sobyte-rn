{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es2017"],
        "allowJs": true,
        "checkJs": false,
        "jsx": "react-native",
        "sourceMap": false,
        "removeComments": false,
        "noEmit": true,
        "incremental": true,
        "importHelpers": true,
        "isolatedModules": true,
        "strict": false,
        "noImplicitAny": true,
        "declaration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "typeRoots": ["node_modules/@types", "@types"]
}
